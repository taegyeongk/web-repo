<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper SYSTEM "path/mybatis-3-mapper.dtd">
<mapper namespace="co.yedam.board.mapper.BoardMapper">
	<select id="selectList"
		resultType="co.yedam.board.service.BoardVO">
		SELECT * FROM BOARD ORDER BY BOARD_NO
	</select>
	<select id="select" resultType="co.yedam.board.service.BoardVO"
		parameterType="int">
		select * from board where board_no=#{boardNo}
	</select>

	<update id="updateCnt" parameterType="int">
		UPDATE BOARD SET
		VIEW_CNT=VIEW_CNT+1 WHERE BOARD_NO=#{boardNo}
	</update>

	<insert id="insert"
		parameterType="co.yedam.board.service.BoardVO">
		insert into board(board_no,title,content, writer, image)
		values(seq_board.nextval,#{title},#{content},#{writer},#{image})
	</insert>

	<update id="update"
		parameterType="co.yedam.board.service.BoardVO">
		update board set
		title=#{title},content=#{content},image=nvl(#{image},image),last_update=sysdate
		where board_no=#{boardNo}
	</update>
	<delete id="delete" parameterType="int">
		delete from board where
		board_no=#{boardNo}
	</delete>

	<!-- 파라메터가 2개인 경우에는 @Param을 사용 -->
	<select id="getUser" resultType="co.yedam.board.service.MemberVO">
		select * from member where
		mid=#{id} and pass=#{pw}
	</select>

	<select id="memberList" resultType="co.yedam.board.service.MemberVO">
		select * from member order by 1
	</select>
</mapper>